        <Button Content="Click để hiện các view đang sử dụng ViewTemplate bên trên" Height="37" Margin="0,10,0,0" Click="find_view" Background="#FFE6D4D4" BorderBrush="#FF190000" Foreground="Black" Width="388" />
        <Grid Height="25" Width="414">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="250*"/>
                <ColumnDefinition Width="89*"/>
            </Grid.ColumnDefinitions>
        </Grid>

    </StackPanel>
</Window>